//----------------------------------------------
// Vehicle behavior file
//----------------------------------------------

initialize   DEPLOY  = false
initialize   RETURN  = false
initialize   STATION_KEEP = false
initialize   SURVEY  = true
initialize   AVOID   = true
initialize   SURVEY_UNDERWAY = false
initialize   OPREGION = true
initialize   SCAN = true
initialize   SPIRAL = false

set MODE = ACTIVE {
  DEPLOY = true
} INACTIVE

set MODE = RETURNING {
  MODE = ACTIVE
  RETURN = true
}

set MODE = SCANNING {
  MODE   = ACTIVE
  SURVEY = true
  SCAN   = true
  RETURN = false
}

set MODE = SPIRALING {
  MODE   = ACTIVE
  SURVEY = true
  SPIRAL = true
  RETURN = false
}


//----------------------------------------------
Behavior = BHV_Waypoint
{ 
  name         = scan_survey
  pwt          = 100
  condition    = MODE==SCANNING
  updates      = SCAN_UPDATES
  activeflag   = SURVEY_UNDERWAY = true
  runflag      = UTS_RETURN_PAUSE = false
  endflag      = SCAN = false
  endflag      = SPIRAL = true
  endflag      = MOVE_CENTER = true
  endflag      = ENCIRCLE_ACTIVE = true

capture_radius = 8
   slip_radius = 15                      
  capture_line = true                     
 lead_to_start = true
          lead = 8                   
         order = normal                   
        points = format=radial, x=60, y=-105, radius=60, pts=20, snap=1
   post_suffix = $(VNAME)                
        repeat = 0                       
         speed = 3  

  visual_hints = vertex_size        = 5          
  visual_hints = edge_size          = 3          
  visual_hints = vertex_color       = dodger_blue
  visual_hints = edge_color         = white      
  visual_hints = nextpt_color       = yellow     
  visual_hints = nextpt_lcolor      = aqua      
  visual_hints = nextpt_vertex_size = 8    
}


//----------------------------------------------
Behavior = BHV_Loiter
{ 
  name         = spiral_survey
  pwt          = 100
  condition    = MODE==SPIRALING
  perpetual    = true
  updates      = SPIRAL_UPDATES
  activeflag   = SURVEY_UNDERWAY = true
  endflag      = RETURN = true

capture_radius = 8
   slip_radius = 15 
         speed = 2   // meters per second
       polygon = radial:: x=80, y=-105, radius=30, pts=10
     speed_alt = 1.5
     clockwise = false

  visual_hints = vertex_size        = 5          
  visual_hints = edge_size          = 3          
  visual_hints = vertex_color       = dodger_blue
  visual_hints = edge_color         = lightcoral      
  visual_hints = nextpt_color       = yellow     
  visual_hints = nextpt_lcolor      = aqua      
  visual_hints = nextpt_vertex_size = 8   
}


//----------------------------------------------
Behavior = BHV_Waypoint
{
  name       = waypt_return
  pwt        = 100
  condition  = RETURN = true
  condition  = DEPLOY = true
  perpetual  = true
  runflag    = SEND_FINAL_ESTIMATES = true
  endflag    = RETURN = false
  endflag    = DEPLOY = false

         speed = 2.0
        radius = 2.0
     nm_radius = 8.0
        points = $(RETURN_POS)
        repeat = 10
          lead = 8
}


//----------------------------------------------
Behavior = BHV_OpRegion
{
  name       = opregion
  pwt        = 100
  condition  = MODE==ACTIVE
  condition  = OPREGION=true
 
             polygon = pts={-50,-40 : 100,20 : 180,20 : 180,-200 : -50,-200 : -100,-75}
  trigger_entry_time = 1
  trigger_exit_time  = 1
        visual_hints = edge_size=1, vertex_size=2
}


//------------------------------------------------
Behavior = BHV_AvoidCollision
{
  name       = avdcollision_
  pwt        = 200
  condition  = AVOID = true
  updates    = CONTACT_INFO
  endflag    = CONTACT_RESOLVED = $[CONTACT]
  templating = spawn

               contact = to-be-set
      on_no_contact_ok = true
           extrapolate = true
                 decay = 30,60

        pwt_outer_dist = 50
        pwt_inner_dist = 20
        completed_dist = 75
     min_util_cpa_dist = 4
     max_util_cpa_dist = 15    
             pwt_grade = linear
   bearing_line_config = white:0, green:0.65, yellow:0.8, red:1.0
}
